<Window x:Class="SpookyToot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpookyToot"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1300">
    <Window.DataContext>
        <local:GraphControl/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height=" 50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <oxy:PlotView x:Name="DailyView" Model="{Binding ModelViewDaily.Model}" Controller="{Binding ModelViewDaily.Controller }" Grid.Row="2" />
        <oxy:PlotView x:Name="WeeklyView" Model="{Binding ModelViewWeekly.Model}" Controller="{Binding ModelViewWeekly.Controller }" Grid.Row="1" />
        <oxy:PlotView x:Name="MonthlyView" Model="{Binding ModelViewMonthly.Model}" Controller="{Binding ModelViewMonthly.Controller }" Grid.Row="0" />
    </Grid>
</Window>
